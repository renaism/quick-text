{
  "manifest_version": 3,
  "name": "Quick Text",
  "version": "0.1",
  "description": "Insert your saved texts quickly via right-click menu.",
  "permissions": ["storage", "contextMenus", "activeTab"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "@quick-text.renaism",
      "strict_min_version": "109.0"
    }
  }
}
